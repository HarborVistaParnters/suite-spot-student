{% layout 'layouts/base.liquid' %}

{% block main %}
<main class="home" data-page-id="{{ data._id }}">
    {% for section in data.modules %}
        {%- capture path -%} partials/modules/{{ section._type }}.liquid {%- endcapture -%}
        {% render path, module: section, collections: collections, amenities_list: sanity.property_amenities %}
    {% endfor %}
</main>
{% endblock %}
