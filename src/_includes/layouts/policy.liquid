{% layout 'layouts/base.liquid' %}

{% block main %}
<main class="policy interior" data-page-id="{{ data._id }}">
    <div class="content-wrapper">
        <header>
            <h1 id="{{ data.title | slugify }}" class="text-center">{{ data.title }}</h1>
        </header>
        <div class="sections">
            {% for section in data.modules %}
                {%- capture path -%} partials/modules/{{ section._type }}.liquid {%- endcapture -%}
                {% render path, module: section, collections: collections %}
            {% endfor %}
        </div>
    </div>
</main>
{% endblock %}
