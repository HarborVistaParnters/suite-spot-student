<section class="contact-form | section-spacing half">
    <div class="content-wrapper">
        <form
            name="contact"
            method="POST"
            action="/contact-success"
            data-netlify="true"
            netlify-honeypot="filter-field"
        >
            <p>{{ text }}</p>
            <p class="visually-hidden">
                <label>Don't fill this out if you're human: <input name="filter-field"></label>
            </p>
            <div class="split">
                <div class="form-item">
                    <label for="firstName">First Name</label>
                    <input id="firstName" name="firstName" type="text" autocomplete="given-name" required>
                </div>
                <div class="form-item">
                    <label for="lastName">Last Name</label>
                    <input id="lastName" name="lastName" type="text" autocomplete="family-name" required>
                </div>
            </div>
            <div class="form-item">
                <label for="email">Email</label>
                <input id="email" name="email" type="email" autocomplete="email" required>
            </div>
            <div class="form-item">
                <label for="message">Message</label>
                <textarea id="message" name="message" rows="3" required></textarea>
            </div>
            <button type="submit" class="button-link" data-theme="gradient">Submit</button>
        </form>
    </div>
</section>
